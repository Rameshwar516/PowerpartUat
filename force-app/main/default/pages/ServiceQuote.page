<apex:page sidebar="false" standardController="Quote__c" applyBodyTag="false" extensions="ClsAMCQuote" renderAs="pdf">

    <head>
        <style type="text/css">
            @page 
            {  
            size:10.54in 13.50in; 
            margin-top: 7.00cm;
            page-break-after:always;
            @top-center 
            {                   
            content: element(header);               
            }
            @bottom-center
            {
            content: element(footer); 
            }
            }  
            div.header 
            {                
            padding: 5px; 
            padding-top:10px;
            padding-bottom:5px;
            position: running(header); 
            content: "Page " counter(page) " of " counter(pages);
            } 
            div.footer 
            {                
            padding: 5px;               
            position: running(footer);    
            }
            @page 
            {
            @bottom-center 
            {
            padding: 10px;
            content: "Page " counter(page) " of " counter(pages);
            }
            }
            
            table 
            {
            border-spacing: 0px;
            font-size:12px;
            font-family: Arial;
            -fs-table-paginate: paginate; 
            }
            
            td {
            border-width: 1px;
            padding: 4px;
            border-style: solid;
            border-color: #000000;
            }
            
            th { 
            border-width: 1px ;
            padding: 4px ;
            border-style: solid ;
            border-color: #000000;
            }
            
        </style> 
    </head>
    <apex:form >
        <div class="header">
            <div style="width:100%;margin-top:8%"> 
                <div style="float:left; width:40%;">
                    <apex:image url="{!$Resource.PowerpartsLogo}" width="230" height="80"/><br/>
                    <b><apex:outputText value="Plot No. 114, Pace City1" style="font-size:20px;font-family: Arial;padding-left:4px" /></b><br/>
                    <apex:outputText value="Sector- 37, Gurgaon-122001" style="padding-left:4px;font-family: Arial; size: 12pt;"/><br/>
                    <apex:outputText value="Haryana, India" style="padding-left:4px;font-family: Arial; size: 12pt;"/><br/>
                    <apex:outputText value="Ph.  : +91 124 4036614/4019215" style="padding-left:4px;font-family: Arial; size: 12pt;"/><br/>
                    <apex:outputText value="Email: " style="padding-left:4px;font-family: Arial; size: 12pt;"/><u style="color:blue;font-family: Arial; size: 12pt;">powerparts@powerparts.in</u><br/>
                </div>
                <div style="float:left;margin-left:8%;text-align:center;">
                    
                </div>
                <div style="float:right; width:30%;">
                    <apex:image url="{!$Resource.PerkinsLogo}" width="180" height="160" style="margin-left:28%"/>
                </div>
            </div>
        </div>
        <body>
            <div class="content">
                
                <div style="width:100%;"> 
                    <div style="float:left; width:40%;">
                       <b> Offer No.:</b> {!Quote__c.Quote_Number__c}
                    </div>
                    <div style="float:left;margin-left:8%;text-align:center;">
                        
                    </div>
                    <div style="float:right; width:30%;">
                        <b>Ref. No.:</b>
                            {!Quote__c.Opportunity__r.Reference_Number__c}
                    </div>
                </div><br/>
                <br/>
                <div style="width:100%;"> 
                    <div style="float:left; width:40%;">
                        <b>Date:</b> 
                            <apex:outputText value="{0, date, d'/'MM'/'y}">
                                <apex:param value="{!Quote__c.Date__c}"/>
                            </apex:outputText>
                    </div>
                    <div style="float:left;margin-left:8%;text-align:center;">
                        
                    </div>
                    <div style="float:right; width:30%;">
                        <b>Ref. Date :</b>
                            <apex:outputText value="{0, date, d'/'MM'/'y}">
                                <apex:param value="{!Quote__c.Opportunity__r.Reference_Date__c}"/>
                            </apex:outputText>
                    </div>
                </div><br/>
                <br/>
                
                <div style="width:100%;"> 
                    <div style="float:left; width:40%;">
                        <b>Customer Name:</b> {!Quote__c.Customer_Party__r.Name}
                    </div>
                    <div style="float:left;margin-left:8%;text-align:center;">
                        
                    </div>
                    <div style="float:right; width:30%;">
                        
                    </div>                                       
                </div><br/>
                
                <div style="width:100%;"> 
                    <div style="float:left; width:40%;">
                        
                       <b>Address : </b> <apex:outputfield value="{!Quote__c.Billing_Address__c}"/>
                    </div>
                    <div style="float:left;margin-left:8%;text-align:center;">
                        
                    </div>
                    <div style="float:right; width:30%;">
                      <b>  Site Address: </b><apex:outputfield value="{!Quote__c.Shipping_Address__c}"/>
                    </div>
                </div>
                
                <div style="width:100%;"> 
                    <div style="float:left; width:100%;">&nbsp;
                    </div>
                </div>                                                                     
                    
                <div style="width:100%;"> 
                    <div style="float:left;width:40%;">
                        <b>Engine Serial No. :</b>{!Quote__c.Opportunity__r.Customer_Asset__r.Name}
                    </div>
                     <div style="float:left;margin-left:8%;text-align:center;">
                        
                    </div>
                    <div style="float:right;width:30%;">
                     <b> Application:</b> {!Quote__c.Opportunity__r.Customer_Asset__r.Applications__c}
                    </div>
                </div>
                 <div style="width:100%;"> 
                    <div style="float:left; width:100%;">&nbsp;
                    </div>
                </div>  
                 <div style="width:100%;"> 
                    <div style="float:left;width:40%;">
                       <b>Subject </b>: 
                    </div>
                    
                </div>
                
                <div style="width:100%;"> 
                    <div style="float:left;width:100%;margin-top:5px">
                        &nbsp;<br/>
                        Dear Sir, <br/><br/>
                            We are pleased to offer for  engineering service charges.
                    </div>
                </div>
                
                <div style="width:100%;"> 
                <div style="float:left;width:100%;margin-top:5px">
                <table style="width:100%;border:1px solid black;border-collapse: collapse; margin-bottom:2%; margin-top:2%;">
                
                <tr >
                    <td valign="top" >
                        <b>Sl. No.</b>
                    </td>
                    <td valign="top" >
                        <b>Description</b>
                    </td>
                    <td valign="top" colspan="2">
                        <b>Qty.</b>
                    </td>
                    <td valign="top">
                        <b>Amount</b>
                    </td>
                    <td valign="top">
                        <b>GST%</b>
                    </td>
                     <td valign="top">
                        <b>GST Amount</b>
                    </td>
                    <td valign="top">
                        <b>Total Amount</b>
                    </td>
                </tr> 
                <apex:variable var="Index" value="{!0}"/>
                <apex:repeat value="{!lineitem}" var="li">
                    <tr >
                        <td valign="top" >
                            <apex:variable var="Index" value="{!Index + 1}" />  {!Index}
                        </td>
                        <td valign="top" >
                            {!li.Description__c}
                        </td>
                        <td valign="top" colspan="2">
                            {!li.Quantity__c}
                        </td>
                        <td valign="top">
                            {!li.Total_Amount_Formula__c }
                        </td>
                        <td valign="top">
                            <b>{!li.GST__c }</b>
                        </td>
                         <td valign="top">
                            <b>{!li.GST_Amount__c }</b>
                        </td>
                        <td valign="top">
                            <b> {!li.Total_Amount_GST__c }</b>
                        </td>
                    </tr> 
                </apex:repeat>
            </table>
            </div>
            </div>
            
               <div style="width:100%;"> 
                    <div style="float:left;width:100%;">
                        <u><b>Terms &amp; Conditions </b></u>: <br/><apex:outputfield value="{!Quote__c.Term_and_Condition__c}"/>
                    </div>
                </div>
                <div style="float:left;width:100%;margin-top: 25px;">
                    Kindly Send the PO for Engineers Visit enable us to Proceed further
                </div>
                <div style="width:100%;"> 
                    <div style="float:left;width:100%;">
                        &nbsp;<br/><br/>
                        Thanking You, <br/>
                        Yours Faithfully <br/>
                        For <b>POWERPARTS PRIVATE LIMITED </b>
                        <br/><br/><br/>
                        <b>Authorised Signatory</b>
                    </div>
                </div> 
            </div>
        </body>
    </apex:form>
</apex:page>