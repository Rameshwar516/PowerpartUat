<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_Update_Lead_After_Convert</fullName>
    <active>true</active>
    <errorConditionFormula>IF(ISPICKVAL(PRIORVALUE(Lead_Status__c) , &apos;Closed (Converted)&apos;),True,false)</errorConditionFormula>
    <errorMessage>You can not update Lead when the lead status is converted.</errorMessage>
</ValidationRule>
