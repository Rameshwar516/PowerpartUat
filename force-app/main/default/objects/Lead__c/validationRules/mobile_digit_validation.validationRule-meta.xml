<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>mobile_digit_validation</fullName>
    <active>true</active>
    <description>Valid_for_10_digits</description>
    <errorConditionFormula>NOT(REGEX(Mobile__c ,&quot;[0-9]{3}[0-9]{3}[0-9]{4}&quot;))</errorConditionFormula>
    <errorDisplayField>Mobile__c</errorDisplayField>
    <errorMessage>Valid to 10 digit mobile number</errorMessage>
</ValidationRule>
