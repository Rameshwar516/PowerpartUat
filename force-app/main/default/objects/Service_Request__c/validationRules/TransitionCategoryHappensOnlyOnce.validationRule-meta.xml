<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>TransitionCategoryHappensOnlyOnce</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK( Category_Update__c ) ) &amp;&amp;  ISCHANGED( Failure_Category__c )</errorConditionFormula>
    <errorDisplayField>Failure_Category__c</errorDisplayField>
