<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Part_Request_should_be_greater</fullName>
    <active>true</active>
    <errorConditionFormula>if(
	ISNULL(Part_Request_Count_Number__c),Send_Email_to_Service_Manager__c,
	AND
	(
		Part_Request_Count_Number__c &lt; 1, 
		Send_Email_to_Service_Manager__c 
	)
)</errorConditionFormula>
    <errorDisplayField>Send_Email_to_Service_Manager__c</errorDisplayField>
    <errorMessage>There are no part requested.</errorMessage>
</ValidationRule>
